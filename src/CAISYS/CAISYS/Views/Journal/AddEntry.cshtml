
@model AddEntryVm
@{
    ViewData["Title"] = "Add Entry";
}

<div class="container">
    <div class="row">
        <div class="col">
            
            <form asp-action="AddEntry" asp-controller="Jounral" class="border border-light p-5">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label>@SharedLocalizer.GetLocalizedHtmlString("EntryDate")</label>
                    <input id="entrydate" placeholder="Select Date" class="form-control datepicker" asp-for="EntryDate" type="date" />
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">@SharedLocalizer.GetLocalizedHtmlString("AccountName")</th>
                            <th scope="col" class="text-center">@SharedLocalizer.GetLocalizedHtmlString("Explanation")</th>
                            <th scope="col" class="text-center">@SharedLocalizer.GetLocalizedHtmlString("Debit")</th>
                            <th scope="col" class="text-center">@SharedLocalizer.GetLocalizedHtmlString("Credit")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Entries.Count; i++)
                        {

                            <tr>

                                <td>
                                    <select asp-for="Entries[i].AccountNo" asp-items="Model.Entries[i].AccountCharts"></select>
                                    <input type="hidden" class="form-control" asp-for="EntryNo" />

                                </td>
                                <td> <input asp-for="Entries[i].Explanation" /> </td>
                                <td> <input asp-for="Entries[i].Debit" />  </td>
                                <td> <input asp-for="Entries[i].Credit" /> </td>
                            </tr>
                        }


                    </tbody>
                </table>

                <input  class="btn btn-primary" type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Submit")" />
            </form>
        </div>
    </div>
</div>

