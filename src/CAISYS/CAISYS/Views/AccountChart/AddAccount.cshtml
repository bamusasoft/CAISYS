@using CAISYS.Resources

@inject LocService SharedLocalizer

@model AccountChart
@{
    ViewData["Title"] = "AddAccount";
}

<div class="container">
    <div class="row">
        <form asp-action="AddAcount" asp-controller="AccountChart">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>@SharedLocalizer.GetLocalizedHtmlString("AccountNo")</label>
                <input asp-for="AccountNo" autofocus />
                <span asp-validation-for="AccountNo" class="text-danger"></span>
            </div>
            <div>
                <button type="submit">@SharedLocalizer.GetLocalizedHtmlString("Submit")</button>
            </div>
        </form>
    </div>

</div>
